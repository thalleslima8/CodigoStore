@{ ViewData["Title"] = "Resumo"; }

@model CasaDoCodigo.Models.Pedido;

<h3>Resumo do Pedido</h3>

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-md-12">
                <h3>Nº do Pedido: @(Model.Id)</h3>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-3">
                <h3>Seus Dados</h3>
                <div>@Model.Cadastro.Nome</div>
                <div>@Model.Cadastro.Telefone</div>
            </div>
            <div class="col-md-3">
                <h3>E-mail</h3>
                @Model.Cadastro.Email
            </div>
            <div class="col-md-6">
                <h3>Endereço de Entrega</h3>
                <div>@Model.Cadastro.Endereco, @Model.Cadastro.Complemento - @Model.Cadastro.Bairro - CEP: @Model.Cadastro.CEP - @Model.Cadastro.Municipio - UF: @Model.Cadastro.UF - Brasil </div>
            </div>
        </div>
        <hr />
        <div class="row">
            <div class="col-md-5">
                <h3>Item</h3>
            </div>
            <div class="col-md-5">
                <h3>Quantidade</h3>
            </div>
            <div class="col-md-2">
                <h3>Valor Unitário</h3>
            </div>
        </div>
        @foreach (var item in Model.Itens)
        {
            <div class="row">
                <div class="col-md-3">
                    <div>@(item.Produto.Nome)</div>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">@item.Quantidade</div>
                </div>
                <div class="col-md-4">
                    <div class="pull-right">@item.Subtotal</div>
                </div>
            </div>
         }
        <br />
        <div class="container">
            <div class="row">
                <div class="col-lg-4">
                    <h3></h3>
                </div>
                <div class="col-lg-4">
                    <h3>Total do Pedido: R$ @Model.Total()</h3>
                </div>
                <div class="col-lg-4">
                    <h3></h3>
                </div>
            </div>
        </div>

    </div>
</div>
